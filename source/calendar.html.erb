<div id="calendar-content">
  <aside>
    <h1>Articles de
      <% case page_type
         when 'day' %>
        <%= Date.new(year, month, day).strftime('%b %e %Y') %>
      <% when 'month' %>
        <%= Date.new(year, month, 1).strftime('%b %Y') %>
      <% when 'year' %>
        <%= year %>
      <% end %>
    </h1>
  </aside>


  <div data-type="gallery">
    <% page_articles.each_with_index do |article, i| %>
        <article>
          <h2><%= link_to article.title, article %><br /><span><%= article.date.strftime('%d.%m.%y') %></span></h2>
          <% if article.data.is_actu %>
            <div class="content">
              <%= article.body %>
            </div>
          <% else %>
              <figure>
                <img src="/images/content/<%= article.data.picture || article.data.pictures[0] %>" />
              </figure>
          <% end %>
        </article>
    <% end %>
  </div>
</div>