<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    
    <title><%= current_page.data.title %></title>
    <meta property="og:title" content="<%= current_page.data.title %>" />
    <meta property="og:image" content="<%= current_page.data.picture %>" />
    
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,200,200italic,400italic,700' rel='stylesheet' type='text/css' />
    <link href='/vendor/bootstrap/bootstrap.min.css' rel='stylesheet' type='text/css'>
    <link href='/vendor/icomoon/style.css' rel='stylesheet' type='text/css' />
    <%= stylesheet_link_tag "normalize", "all" %>
    
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    <script src="/vendor/underscore/underscore.js"></script>
    <script src="/vendor/bootstrap/bootstrap.min.js"></script>
    <%= javascript_include_tag  "gallery", "init" %>
    
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>