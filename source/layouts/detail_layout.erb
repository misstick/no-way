<% wrap_layout :layout do %>
<div class="article-content">
	<aside>
		<ul class="paginate-menu">
			<% if current_page.previous_article %>
			<li id="goto_prev"><%= link_to '&laquo; <span>' + current_page.previous_article.title + '</span>', current_page.previous_article %></li>
			<% end %>

			<% if current_page.next_article %>
			<li id="goto_next"><%= link_to "<span>" + current_page.next_article.title + "</span> &raquo;", current_page.next_article %></li>
			<% end %>
			</ul>
			<h2><span><%= current_page.data.title %></span></h2>
	</aside>
	<article>
		<%= yield %>
	</article>

	<figure>
		<div id="pictures-wall" data-type="gallery" class="gallery-content">
		<% current_page.data.pictures.each do |picture, i| %>
			<img src="/images/content/<%= picture %>" />
		<% end %>
		</div>
	</figure>
</div>
<% end %>
