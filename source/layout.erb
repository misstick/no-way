<!doctype html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />

		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
		<meta name="viewport" content="width=device-width">
		
		<title><%= current_page.data.title %></title>
		<meta property="og:title" content="<%= current_page.data.title %>" /> 
		<meta property="og:image" content="<%= current_page.data.picture %>" />
		
		<link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,200,200italic,400italic,700' rel='stylesheet' type='text/css'>
		<%= stylesheet_link_tag "bootstrap.min", "all" %>
		<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
		<%= javascript_include_tag  "underscore", "bootstrap.min", "all" %>
	</head>
	<body>

		<div class="page">

			<%= partial "header" %>

			<section id="main" role="main">
				<%= yield %>
			</section>

			<%= partial "footer" %>
		</div>
	</body>
</html>
