title: Portfolio
picture: "https://secure.gravatar.com/avatar/9959ecc877e288989012679976743bca?s=140&d=https://a248.e.akamai.net/assets.github.com%2Fimages%2Fgravatars%2Fgravatar-user-420.png"
---
<div data-type="gallery" class="gallery-content home-content">
  <% page_articles.each_with_index do |article, i| %>
  
  <article>
    
    <h2><%= link_to article.title, article %><br /><span><%= article.date.strftime('%d.%m.%y') %></span></h2>
    <% if article.data.is_actu %>
      <div class="content">
        <%= article.body %>
      </div>
    <% else %>
        <figure>
          <img src="/images/content/<%= article.data.picture || article.data.pictures[0] %>" />
        </figure>
    <% end %>
    </article>
  <% end %>
</div>